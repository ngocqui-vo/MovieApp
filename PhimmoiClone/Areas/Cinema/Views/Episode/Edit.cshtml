@using PhimmoiClone.Areas.Cinema.Models
@model PhimmoiClone.Areas.Cinema.ViewModel.EpisodeUpdateViewModel

@{
    var movie = ViewData["Movie"] as Movie;
    ViewBag.Title = $@"sửa {movie?.Name} tập {Model.EpNumber}";
    
}

<h2>Sửa thông tin tập @Model.EpNumber phim @movie?.Name</h2>
<form asp-action="Edit" method="POST">
    <input type="hidden" name="movieId" value="@movie?.Id">
    <input type="hidden" asp-for="Id">

    <div class="mb-3">
        <label for="EpNumber" class="form-label">Số tập</label>
        <input class="form-control" id="EpNumber" asp-for="EpNumber">
    </div>

    <div class="mb-3">
        <label for="EpString" class="form-label">Tập bằng chữ</label>
        <input class="form-control" id="EpString" asp-for="EpString">
    </div>
    
    <div class="mb-3">
        <label for="LinkEmbed" class="form-label">Nhúng link</label>
        <input class="form-control" id="LinkEmbed" asp-for="LinkEmbed">
    </div>

    <button type="submit" class="btn btn-primary">Thêm</button>
</form>