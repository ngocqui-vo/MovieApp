@model MovieApp.Areas.Cinema.ViewModel.ActorViewModel

@{
    ViewBag.Title = "Thêm diễn viên";
    
}

<h2>Thêm diễn viên</h2>

<form asp-action="Create" method="POST" enctype="multipart/form-data">

    <div class="mb-3">
        <label for="Name" class="form-label">Tên</label>
        <input class="form-control" id="Name" asp-for="Name">
    </div>
    
    <div class="mb-3">
        <label for="Description" class="form-label">Mô tả</label>
        <input class="form-control" id="Description" asp-for="Description">
    </div>
    
    <div class="mb-3">
        <label for="DoB" class="form-label">Ngày sinh</label>
        <input class="form-control" id="DoB" asp-for="DoB">
    </div>
    
    <div class="mb-3">
        <label for="image" class="form-label">Hình ảnh</label>
        <input class="form-control" id="image" asp-for="Image">
    </div>

    <button type="submit" class="btn btn-primary">Thêm</button>
</form>

