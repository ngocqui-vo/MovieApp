@model MovieApp.Areas.Cinema.ViewModel.MovieViewModel

@{
    ViewBag.Title = "thêm phim";
}

<h2>Thêm phim</h2>

<form asp-action="Create" method="POST" enctype="multipart/form-data">

    <div class="mb-3">
        <label for="Name" class="form-label">Tên</label>
        <input class="form-control" id="Name" asp-for="Name">
    </div>

    <div class="mb-3">
        <label for="Description" class="form-label">Mô tả</label>
        <input class="form-control" id="Description" asp-for="Description">
    </div>

    <div class="mb-3">
        <label for="publish" class="form-label">Ngày ra mắt</label>
        <input class="form-control" id="publish" asp-for="Publish">
    </div>
    
    <div class="mb-3">
        <label for="images" class="form-label">Các hình ảnh</label>
        <input class="form-control" id="images" asp-for="ListImages">
    </div>
    


    <button type="submit" class="btn btn-primary">Thêm</button>
</form>