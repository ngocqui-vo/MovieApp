@model System.Collections.Generic.List<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Tất cả roles";
}

<a asp-action="AddRole" class="btn btn-success">Thêm Role</a>
<h1>Tất cả các roles:</h1>

@if (Model is {Count: > 0})
{
    <ul>
        @foreach (var role in Model)
        {
            <li>
                <a asp-action="RoleDetail" asp-route-roleId="@role.Id">@role.Name</a>
                - 
                <a asp-action="DeleteRoleConfirm" asp-route-roleId="@role.Id" class="btn btn-danger">Xóa</a>
            </li>
        }
    </ul>
}